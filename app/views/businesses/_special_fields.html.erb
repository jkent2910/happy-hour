<div class="nested-fields">
  <p>
    <%= f.label :name, 'Name' %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :category, 'Category' %><br />
    <%= f.select :category, options_for_select(Special::VALID_CATEGORIES) %>
  </p>
  <p>
    <%= f.label :price, 'Price' %><br />
    $<%= f.text_field :price%>
  </p>
  <p>
    <%= f.label :day_of_the_week, 'Day of the week' %><br />
    <%= f.collection_check_boxes(:day_of_the_week, Special::VALID_DAYS_OF_THE_WEEK, :to_s, :to_s) %>
  </p>

  <%= link_to_remove_association "Remove Special", f, class: 'btn btn-danger' %>
</div>